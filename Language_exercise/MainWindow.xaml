<Window x:Class="Language_exercise.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Language_exercise"
        mc:Ignorable="d"
        Title="Language trainer" Height="550" Width="800">
    <Grid Background="#FF396FA2">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="360"/>
        </Grid.RowDefinitions>
        <Label Content="Language trainer" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" FontSize="24" Width="400" Grid.Row="0"/>
        <Label Content="German" HorizontalAlignment="Right" HorizontalContentAlignment="Right" FontStyle="Italic" VerticalAlignment="Center" FontSize="24" Width="400" Grid.Row="0"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="Home" Foreground="White" FontSize="21" Background="#FF396FA2" Grid.Column="0" Width="160" BorderBrush="#FF396FA2" Click="Home_click"/>
            <Button Content="Exercise" Foreground="White" FontSize="21" Background="#FF396FA2" Grid.Column="1" Width="160" BorderBrush="#FF396FA2" Click="Exercise_click"/>
            <Button Content="Statistics" Foreground="White" FontSize="21" Background="#FF396FA2" Grid.Column="2" Width="160" BorderBrush="#FF396FA2" Click="Statistics_click"/>
            <Button Content="Settings" Foreground="White" FontSize="21" Background="#FF396FA2" Grid.Column="3" Width="160" BorderBrush="#FF396FA2" Click="Settings_click"/>
            <Button Content="Others" Foreground="White" FontSize="21" Background="#FF396FA2" Grid.Column="4" Width="160" BorderBrush="#FF396FA2" Click="Others_click"/>
        </Grid>
        <Grid Name="contentGrid" Grid.Row="2"/>
    </Grid>
</Window>
